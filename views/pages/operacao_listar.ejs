<%- contentFor('body') %>
    <p class="h2">Operações - Listar</p>

    <head>
      <script type="text/javascript" src="/js/operacao.js"></script>
    </head>

    </br>

    <table class="table table-striped table-hover">
      <thead class="thead">
        <tr>
          <th scope="col">Tipo</th>
          <th scope="col">Natureza</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < operacoes.length; i++) { %>
        <tr onclick="window.location = 'editar/<%= operacoes[i].id %>'">
          <td><%= operacoes[i].tipo %></td>
          <td><%= operacoes[i].natureza_fmt %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
        
    </br>

    <div class="row" style="width:90%;">
      <div class="col-md-3 mb-3">
        <button class="btn btn-secondary btn-block voltar">Voltar</button>
      </div>
      
      <div class="col-md-3 mb-3" style="padding-left: 5px;">
        <button id="cadastrar" class="btn btn-primary btn-block">Cadastrar</button>
      </div>
    </div>
