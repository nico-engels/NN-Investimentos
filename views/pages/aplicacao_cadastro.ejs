<%- contentFor('body') %>
      <p class="nome_modulo">Aplicações - Cadastrar</p>
      <form action="" method="POST">
        <table>
          <tr>
            <td class="form_label">Conta:</td>
            <td colspan="3">
              <select name="id_conta">
                <option></option>
                <% for (var i = 0; i < contas.length; i++) { %>
                <option value="<%= contas[i].id %>"><%= contas[i].pessoa.apelido %> - <%= contas[i].alias %></option>
                <% } %>
              </select>
            </td>
          </tr>
          <tr>
            <td class="form_label">Classe:</td>
            <td colspan="3">
              <select name="classe">
                <% for (var i = 0; i < classes.length; i++) { %>
                <option value="<%= classes[i].id %>"><%= classes[i].desc %></option>
                <% } %>
              </select>
            </td>
          </tr>
          <tr>
            <td class="form_label">Alias:</td>
            <td><input name="alias" type="text" size="16" maxlength="15" /></td>
          </tr>
          <tr>
            <td class="form_label">Início:</td>
            <td><input name="inicio" type="date" /></td>
            <td class="form_label">Fim:</td>
            <td><input name="fim" type="date" /></td>
          </tr>
          <tr>
            <td class="form_label">Dia Referência:</td>
            <td colspan="3">
              <select name="dia_ref">
                <option></option>
                <% for (var i = 0; i < dias_ref.length; i++) { %>
                <option value="<%= dias_ref[i].id %>"><%= dias_ref[i].desc %></option>
                <% } %>
              </select>
            </td>
          </tr>
        </table>
        <br />
        <table>
          <tr>
            <td><button onclick="window.history.back()">Voltar</button></td>
            <td><input value="Gravar" type="submit" /></td>
          </tr>
        </table>
      </form>
