<%- contentFor('body') %>
      <p class="nome_modulo">Lançamentos - Cadastrar</p>
      <form action="" method="POST">
        <table>
          <tr>
            <td class="form_label">Data:</td>
            <td><input name="data" type="date" /></td>
          </tr> 
          <tr>
            <td class="form_label">Aplicação:</td>
            <td>
              <select name="id_aplicacao">
              <% for (var i = 0; i < aplicacoes.length; i++) { %>
                <option value="<%= aplicacoes[i].id %>"><%= aplicacoes[i].nome_fmt %></option>
              <% } %>
              </select>
            </td>
          </tr>
          <tr>
            <td class="form_label">Natureza:</td>
            <td>
              <input name="natureza" type="radio" value="C" checked>Crédito</input>
              <input name="natureza" type="radio" value="D">Débito</input>
            </td>
          </tr>
          <tr>
            <td class="form_label">Tipo:</td>
            <td>
              <select name="tipo">
              <% for (var i = 0; i < tipos.length; i++) { %>
                <option value="<%= tipos[i].id %>"><%= tipos[i].desc %></option>
              <% } %>
              </select>
            </td>
          </tr>
          <tr>
            <td class="form_label">Valor:</td>
            <td><input name="valor" type="text" size="11" maxlength="10" /></td>
          </tr>
        </table>
        <br />
        <table>
          <tr>
            <td><button onclick="window.history.back()">Voltar</button></td>
            <td><input value="Gravar" type="submit" /></td>
          </tr>
        </table>
      </form>
